{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "isolatedModules": true
  },
  "include": [
    "packages/*/src/**/*.ts",
    "packages/*/tests/**/*.ts"
  ]
}
