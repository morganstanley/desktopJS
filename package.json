{
  "name": "desktopjs",
  "title": "desktopJS",
  "private": true,
  "license": "Apache-2.0",
  "author": "Morgan Stanley",
  "scripts": {
    "lint": "eslint . --quiet",
    "lint:fix": "eslint . --quiet --fix",
