{
  "name": "desktopjs",
  "title": "desktopJS",
  "private": true,
  "license": "Apache-2.0",
  "author": "Morgan Stanley",
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "postbuild": "copyfiles -f packages/**/dist/*.*.js packages/**/dist/*.*.js.map examples/web/assets/build",
    "clean": "npm run clean --workspaces --if-present",
    "postclean": "rimraf examples/web/assets/build",
    "test": "vitest run --coverage",
    "start": "vite serve examples/web",
    "lint": "eslint . --quiet",
    "lint:fix": "eslint . --quiet --fix",
    "docs": "typedoc",
    "deploy": "npm run deploy --workspaces --if-present",
    "version": "npx lerna version --no-push --no-git-tag-version"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^6.0.2",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitest/coverage-v8": "^3.0.8",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "rimraf": "^5.0.5",
    "typedoc": "^0.27.9",
    "typescript": "^5.3.3",
    "vite": "^6.2.1",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.0.8"
  },
  "overrides": {
    "minimist@<1.2.6": "1.2.6",
    "glob-parent@<5.1.2": "5.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --quiet"
    ]
  },
  "workspaces": [
    "packages/desktopjs",
    "packages/desktopjs-electron",
    "packages/desktopjs-openfin",
    "examples/electron"
  ],
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.37.0"
  }
}
