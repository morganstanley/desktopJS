  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jasmine": "^4.0.2",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "copyfiles": "^2.4.1",
    "dts-bundle": "^0.7.3",
    "eslint": "^8.12.0",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-connect": "^5.7.0",
    "gulp-istanbul": "^1.1.3",
    "gulp-istanbul-enforcer": "^1.0.3",
    "gulp-jasmine": "^4.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-typescript": "^5.0.1",
    "gulp-uglify": "^3.0.2",
    "husky": "^8.0.1",
    "jasmine": "^5.0.0",
    "lint-staged": "^15.0.2",
    "merge2": "^1.4.1",
    "remap-istanbul": "^0.13.0",
    "rollup": "^3.9.0",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "run-sequence": "^2.2.1",
    "tslib": "^2.2.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.3"
  },
  "overrides": {
    "minimist@<1.2.6": "1.2.6",
    "qs@<6.8.1": "6.8.1",
    "lodash.template@<4.5.0": "4.5.0",
    "tar@<4.4.18": "4.4.18",
    "glob-parent@<5.1.2": "5.1.2",
    "async@<3.2.2": "3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --quiet"
    ]
  },
  "workspaces": [
    "packages/desktopjs",
    "packages/desktopjs-electron",
    "packages/desktopjs-openfin",
    "examples/electron"
  ]
