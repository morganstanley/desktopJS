    "dts-bundle": "^0.7.3",
    "eslint": "^7.13.0",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-connect": "^5.7.0",
    "gulp-istanbul": "^1.1.3",
